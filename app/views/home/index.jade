extends ../includes/boilerplate.jade

block css
    link(rel='stylesheet',      
         href='/css/header.css')
block content
    include ../includes/header.jade


    .container
        .row
            .col-lg-6
                h1 Welcome to Bridges!
                p Create a bridge between your assignments and the world


    div(class='container')
      div(id='data_gallery' class='carousel slide' data-ride='carousel')

        ol(class='carousel-indicators')
          li(data-target='#data_gallery' data-slide-to='0' class='active')
          li(data-target='#data_gallery' data-slide-to='1')
          li(data-target='#data_gallery' data-slide-to='2')
          li(data-target='#data_gallery' data-slide-to='3')

        div(class='carousel-inner' role='listbox')
          div(class='item active')
            a(href='http://bridges-cs.herokuapp.com')
                img(src='img/gallery/graph.png' alt='graph' width='460' height='345')
                div(class='carousel-caption carousel-pos' style='color: red')
                    h3 Graph
                    p Graph

          div(class='item')
            a(href='http://bridges-cs.herokuapp.com')
                img(src='img/gallery/list.png' alt='list' width='460' height='345')
                div(class='carousel-caption carousel-pos' style='color: red')
                    h3 List
                    p linked list
        
          div(class='item')
            a(href='http://bridges-cs.herokuapp.com')
                img(src='img/gallery/graph2.png' alt='graph' width='460' height='345')
                div(class='carousel-caption carousel-pos' style='color: red')
                    h3 Graph
                    p dijakstra shortest path

          div(class='item')
            a(href='http://bridges-cs.herokuapp.com')
                img(src='img/gallery/tree.png' alt='tree' width='460' height='345')
                div(class='carousel-caption carousel-pos' style='color: red')
                    h3 Tree
                    p binary tree

        a(class='left carousel-control' href='#data_gallery' role='button' data-slide='prev')
          span(class='glyphicon glyphicon-chevron-left' aria-hidden='true')
          span(class='sr-only') Previous

        a(class='right carousel-control' href='#data_gallery' role='button' data-slide='next')
          span(class='glyphicon glyphicon-chevron-right' aria-hidden='true')
          span(class='sr-only') Next