extends ../includes/boilerplate.jade
block css
    link(rel='stylesheet', 
         href='/css/header.css')
block content
    include ../includes/header.jade 
    
    div(style="margin: 5%")
        - if (assignmentID < 0)
                p Looks like there aren't any assignments here...    :(
        - else 
                p Public Gallery for assignments with id: '#{assignmentID}'

    div(style="margin:5%")
       
        - for (var x = 0; x < usernames.length; x++)
            a(href="/assignments/"+assignmentID+"/"+usernames[x],
                style="float:left;width:100px; margin-left:50px")
                div(style="height:100px; background-color:steelblue; border-radius:100px;")
                h4(style="text-align: center") #{usernames[x]}
        
